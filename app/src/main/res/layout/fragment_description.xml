<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- BACK BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginBottom="12dp"/>

        <!-- MAIN PHOTO -->
        <ImageView
            android:id="@+id/imgPhotoLarge"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_rounded"
            android:clipToOutline="true" />

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtNameLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Place name"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- INFO ROW: chip + distance + heart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- TYPE CHIP -->
            <TextView
                android:id="@+id/txtTypeChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_museum"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Museum"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <!-- DISTANCE -->
            <TextView
                android:id="@+id/txtDistanceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="250 m away"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- HEART -->
            <ImageView
                android:id="@+id/imgFavoriteDetail"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:src="@drawable/ic_heart_outline" />
        </LinearLayout>

        <!-- RATING -->
        <LinearLayout
            android:id="@+id/layoutRatingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBarDetail"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:indeterminateTint="@android:color/holo_orange_light"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@android:color/holo_orange_light"
                android:secondaryProgressTint="@android:color/holo_orange_light"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/txtRatingValueDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtRatingCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="(120)"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ABOUT TITLE -->
        <TextView
            android:id="@+id/txtAboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="About this place"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/txtDescriptionAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Loading AI description..."
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- DISCLAIMER -->
        <TextView
            android:id="@+id/txtAIDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Description generated automatically â€” may contain inaccuracies."
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>

</ScrollView>
