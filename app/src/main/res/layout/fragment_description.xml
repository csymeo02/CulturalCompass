<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/back"
            android:padding="4dp"
            android:src="@drawable/ic_back_arrow" />

        <!-- Large image -->
        <ImageView
            android:id="@+id/imgPhotoLarge"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_image_rounded"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_landmark_placeholder" />

        <!-- Name -->
        <TextView
            android:id="@+id/txtNameLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/place_name"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Row: type chip + distance + favorite -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTypeChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_museum"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Museum"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtDistanceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="250 m away"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgFavoriteDetail"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:contentDescription="Favorite"
                android:padding="4dp"
                android:src="@drawable/ic_heart_outline" />
        </LinearLayout>

        <!-- Rating row -->
        <LinearLayout
            android:id="@+id/layoutRatingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBarDetail"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:indeterminateTint="@android:color/holo_orange_light"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@android:color/holo_orange_light"
                android:secondaryProgressTint="@android:color/holo_orange_light"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/txtRatingValueDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtRatingCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="(120)"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Section title -->
        <TextView
            android:id="@+id/txtAboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="About this place"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- AI Description -->
        <TextView
            android:id="@+id/txtDescriptionAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/description_disclaimer"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Disclaimer -->
        <TextView
            android:id="@+id/txtAIDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/description_ai_disclaimer"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>
</ScrollView>
