<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Large image -->
        <ImageView
            android:id="@+id/imgPhotoLarge"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_landmark_placeholder"
            android:background="@drawable/bg_image_rounded"
            android:clipToOutline="true" />

        <!-- Name -->
        <TextView
            android:id="@+id/txtNameLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Place name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Row: type chip + distance + favorite -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtTypeChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Museum"
                android:textSize="12sp"
                android:background="@drawable/chip_museum"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtDistanceDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="250 m away"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgFavoriteDetail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="@string/app_name"
                android:padding="2dp" />
        </LinearLayout>

        <!-- Rating row -->
        <LinearLayout
            android:id="@+id/layoutRatingDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ratingBarDetail"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/txtRatingValueDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textSize="12sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtRatingCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="(120)"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Section title -->
        <TextView
            android:id="@+id/txtAboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="About this place"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- AI Description -->
        <TextView
            android:id="@+id/txtDescriptionAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="AI generated description goes here."
            android:textSize="14sp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
