<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Map Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <!-- Header: title + filter/sort controls -->
    <LinearLayout
        android:id="@+id/layoutHeaderNearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Title block (title + subtitle) -->
        <LinearLayout
            android:id="@+id/layoutNearbyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNearbyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Landmarks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/txtNearbySubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Close to you"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- FILTER BLOCK with label over border -->
        <RelativeLayout
            android:id="@+id/layoutFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <Spinner
                android:id="@+id/spinnerFilter"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/spinner_outline_bg"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/labelFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="#fef7ff"
                android:paddingHorizontal="6dp"
                android:layout_alignTop="@id/spinnerFilter"
                android:layout_marginStart="16dp"
                android:translationY="-8dp" />
        </RelativeLayout>

        <!-- SORT BLOCK with label over border -->
        <RelativeLayout
            android:id="@+id/layoutSort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <Spinner
                android:id="@+id/spinnerSort"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/spinner_outline_bg"
                android:spinnerMode="dropdown" />

            <!-- Label sitting on top of the border -->
            <TextView
                android:id="@+id/labelSortBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort By"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="#fef7ff"
                android:paddingHorizontal="6dp"
                android:layout_alignTop="@id/spinnerSort"
                android:layout_marginStart="16dp"
                android:translationY="-8dp" />
        </RelativeLayout>

    </LinearLayout>

    <!-- List of nearest attractions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNearby"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>
